{
  "name": "edu-zas-api",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "migrate": "prisma migrate deploy",
    "start": "BUN_ENV=production bun run src/server.ts",
    "migrate:dev": "prisma migrate dev",
    "dev": "BUN_ENV=dev bun run --watch src/server.ts",
    "migrate:test": "bun --env-file=.env.test prisma migrate deploy",
    "test": "BUN_ENV=test bun --env-file=.env.test jest --runInBand"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "latest",
    "@types/cors": "2.8.19",
    "@types/dotenv": "8.2.3",
    "@types/express": "5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "22.15.30",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "peerDependencies": {
    "typescript": "5"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "cors": "2.8.5",
    "express": "5.1.0",
    "prisma": "^6.11.1",
    "ts-results": "^3.3.0",
    "zod": "^4.0.5"
  }
}
